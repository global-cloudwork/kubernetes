{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Authorize Kubeconfig Access",
      "type": "shell",
      "command": "sudo chmod a+r /etc/rancher/rke2/rke2.yaml",
      "problemMatcher": []
    },
    {
      "label": "Wipe, Install, and Bootstrap",
      "type": "shell",
      "command": "cd ${workspaceFolder}/scripts && sudo ./remove-and-bootstrap.sh",
      "problemMatcher": [],
      "dependsOn": [],
      "options": {
        "env": {
          "KUBECONFIG": "/etc/rancher/rke2/rke2.yaml"
        }
      }
    },
    {
      "label": "Deploy Kustomize from List",
      "type": "shell",
      "command": "kubectl kustomize --enable-helm \"github.com/global-cloudwork/kubernetes${input:selectedUrl}?ref=main\" | kubectl apply --server-side --force-conflicts -f -",
      "problemMatcher": [],
      "dependsOn": [],
      "options": {
        "env": {
          "KUBECONFIG": "/etc/rancher/rke2/rke2.yaml"
        }
      }
    }
  ],
  "inputs": [
    {
      "id": "selectedUrl",
      "type": "pickString",
      "description": "Select a URL from URL List in .vscode/tasks.json",
      "options": [
        "/environments/development",
        "/applications/argocd",
        "/kubernetes/bootstrap"
      ]
    }
  ]
}

// curl -s https://api.github.com/repos/global-cloudwork/kubernetes/git/trees/main?recursive=1 \ | jq -r '.tree[] | select(.path | endswith("kustomization.yaml")) | .path' \

{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Deploy Kustomize from URL List in .vscode/tasks.json",
      "type": "shell",
      "command": "kubectl kustomize --enable-helm \"${input:selectedUrl}\" | kubectl apply -f -",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "selectedUrl",
      "type": "pickString",
      "description": "Select a URL from URL List in .vscode/tasks.json",
      "options": [
        "github.com/global-cloudwork/kubernetes/tools?ref=main",
        "github.com/global-cloudwork/kubernetes/?ref=main",
        "github.com/global-cloudwork/kubernetes/applications/core/argocd?ref=main"
      ]
    }
  ]
}